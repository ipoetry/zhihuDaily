                                            <TextBlock x:Name="PlaceholderTextBlock" Opacity="0" Text="Xg" Foreground="{x:Null}" Margin="{TemplateBinding Padding}" IsHitTestVisible="False" AutomationProperties.AccessibilityView="Raw" />
                                            <Rectangle x:Name="PlaceholderRect" Visibility="Collapsed" Fill="{ThemeResource FlyoutBackgroundThemeBrush}" IsHitTestVisible="False" />
                                        </Grid>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="SelectedBorder" IsHitTestVisible="False" Opacity="0" BorderBrush="{ThemeResource ListViewItemSelectedBackgroundThemeBrush}" BorderThickness="{ThemeResource GridViewItemMultiselectBorderThickness}">
                                <Grid x:Name="SelectedCheckMark" Opacity="0" Height="34" Width="34" HorizontalAlignment="Right" VerticalAlignment="Top">
